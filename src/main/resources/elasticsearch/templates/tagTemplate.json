{
  "version": 0,
  "index_patterns": [
    "tag*"
  ],
  "settings": {
    "number_of_shards": 2,
    "analysis": {
      "analyzer": {
        "default": {
          "type": "serbian",
          "filter": [
            "lowercase"
          ]
        }
      },
      "default_search": {
        "type": "serbian",
        "filter": [
          "lowercase"
        ]
      }
    }
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "id": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "userId": {
        "type": "keyword"
      },
      "deleted": {
        "type": "boolean"
      }
    }
  }
}