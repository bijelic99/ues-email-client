{
  "version": 0,
  "index_patterns": [
    "message*"
  ],
  "settings": {
    "number_of_shards": 2
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "id": {
        "type": "long"
      },
      "userId": {
        "type": "long"
      },
      "from": {
        "type": "keyword"
      },
      "to": {
        "type": "keyword"
      },
      "cc": {
        "type": "keyword"
      },
      "bcc": {
        "type": "keyword"
      },
      "dateTime": {
        "type": "date",
        "format": "dd-MM-yyyy HH:mm:ss"
      },
      "subject": {
        "type": "text",
        "analyzer": "serbian"
      },
      "content": {
        "type": "text",
        "analyzer": "serbian"
      },
      "unread": {
        "type": "boolean"
      },
      "attachments": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "long"
          },
          "path": {
            "type": "keyword"
          },
          "mimeType": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "messageId": {
            "type": "long"
          },
          "data": {
            "type": "binary"
          }
        }
      },
      "tags": {
        "type": "long"
      },
      "parentFolderId": {
        "type": "long"
      },
      "accountId": {
        "type": "long"
      },
      "deleted": {
        "type": "boolean"
      },
      "abstractText": {
        "type": "text",
        "analyzer": "serbian"
      },
      "fullText": {
        "type": "text",
        "analyzer": "serbian"
      }
    }
  }
}