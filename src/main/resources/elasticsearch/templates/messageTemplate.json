{
  "version": 0,
  "index_patterns": [
    "message*"
  ],
  "settings": {
    "number_of_shards": 2,
    "analysis": {
      "analyzer": {
        "default": {
          "type": "serbian",
          "filter": [
            "lowercase"
          ]
        }
      },
      "default_search": {
        "type": "serbian",
        "filter": [
          "lowercase"
        ]
      }
    }
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "id": {
        "type": "keyword"
      },
      "userId": {
        "type": "keyword"
      },
      "from": {
        "type": "text"
      },
      "to": {
        "type": "text"
      },
      "cc": {
        "type": "text"
      },
      "bcc": {
        "type": "text"
      },
      "dateTime": {
        "type": "date",
        "format": "dd-MM-yyyy HH:mm:ss"
      },
      "subject": {
        "type": "text"
      },
      "content": {
        "type": "text"
      },
      "unread": {
        "type": "boolean"
      },
      "attachments": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "path": {
            "type": "keyword"
          },
          "mimeType": {
            "type": "keyword"
          },
          "name": {
            "type": "text"
          },
          "messageId": {
            "type": "keyword"
          },
          "data": {
            "type": "binary"
          },
          "metadata": {
            "type": "nested",
            "properties": {
              "date": {
                "type": "date"
              },
              "language": {
                "type": "keyword"
              },
              "content": {
                "type": "text"
              }
            }
          }
        }
      },
      "tags": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "name": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword"
              }
            }
          },
          "userId": {
            "type": "keyword"
          },
          "deleted": {
            "type": "boolean"
          }
        }
      },
      "parentFolderId": {
        "type": "keyword"
      },
      "accountId": {
        "type": "keyword"
      },
      "deleted": {
        "type": "boolean"
      },
      "abstractText": {
        "type": "text"
      },
      "fullText": {
        "type": "text"
      }
    }
  }
}